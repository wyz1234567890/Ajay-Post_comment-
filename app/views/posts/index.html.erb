<h1>POSTS</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
      
      <td><%= post.title %></td>
      <td><%= post.body %></td>
      
      <td><%= link_to 'show', post_path(post) %></td>
      <td><%= link_to 'Edit', edit_post_path(post) %></td>
  
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New User', new_post_path %>

